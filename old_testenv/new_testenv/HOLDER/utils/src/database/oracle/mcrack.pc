//
//   Open a connection to the database.
//
int opendb(char *user, char *psswd)
{
EXEC SQL BEGIN DECLARE SECTION;
char *ur, *pd;
EXEC SQL END DECLARE SECTION;

   ur = user;
   pd = psswd;

   EXEC SQL WHENEVER SQLERROR DO mysql_error();

   EXEC SQL CONNECT :ur IDENTIFIED BY :pd;

   if (errorval == 1) {
      runaway("DB open failed, exiting");
   }

   return(0);
}

///////////////////////////////////////////////////////////
//
//   Put the mail sender/receiver data into the mailuser
//   table.
//
void insertuserinfo(struct userdata *luserhead)
{
struct userdata *localuser;
EXEC SQL BEGIN DECLARE SECTION;
int userid;
char *username, *domain;
EXEC SQL END DECLARE SECTION;

   localuser = luserhead;

   while (localuser != NULL) {

      userid = 0;
      username = localuser->name;
      domain = localuser->domain;

      EXEC SQL WHENEVER NOT FOUND DO notfoundfunc();
      EXEC SQL WHENEVER SQLERROR DO nullreturn();

      EXEC SQL SELECT userid into :userid
               FROM mailuser
               WHERE username = :username
               AND domain = :domain;

      if (notfound == 1) {
         EXEC SQL SELECT max(userid) into :userid
                  FROM mailuser;

         if (errorval == 1) {
            userid = 0;
            errorval = 0;
         } else {
            userid++;
         }

         EXEC SQL WHENEVER SQLERROR DO mysql_error();
         EXEC SQL INSERT INTO mailuser
            (userid, username, domain)
            VALUES (:userid, :username, :domain);

         if (errorval == 1) {
            runaway("Insert (userinfo) failed, exiting");
         }

         notfound = 0;
      }
      localuser->userid = userid;
      localuser = localuser->next;
   }

   return;
}

///////////////////////////////////////////////////////////
//
//   Put the mail from data (user, date, subject) into the
//   email table.
//
void insertmailfrom()
{
EXEC SQL BEGIN DECLARE SECTION;
int userid, mailid;
char *mydata, *subject;
EXEC SQL END DECLARE SECTION;

   insertuserinfo(fromblock->user);

   subject = fromblock->subject;
   mydata = fromblock->data;
   userid = fromblock->user->userid;
   mailid = 0;

   EXEC SQL WHENEVER SQLERROR DO nullreturn();
   EXEC SQL SELECT max(mailid) into :mailid
            FROM email;

   if ((notfound == 1) || (errorval == 1)) {
      mailid = 0;
      errorval = 0;
      notfound = 0;
   } else {
      mailid++;
   }

   EXEC SQL WHENEVER SQLERROR DO mysql_error();
   EXEC SQL INSERT INTO email
      (mailid, userfrom, senddate, subject)
      VALUES (:mailid, :userid, :mydata, :subject);

   if (errorval == 1) {
      runaway("Error inserting to email, exiting");
   }

   fromblock->mailid = mailid;
   notfound = 0;

   return;
}

void submitsegment(int segsize, int lmailid)
{
struct mailcontent *localcontent;
int copied, leftover, i;
char *bufptr, *srcptr;
EXEC SQL BEGIN DECLARE SECTION;
int mailid, sequence;
char *buffer;
EXEC SQL END DECLARE SECTION;

   buffer = (char *)malloc(segsize + 1);

   copied = 0;
   errorval = 0;
   mailid = lmailid;
   sequence = 0;

   localcontent = contenthead;
   srcptr = localcontent->content; while (localcontent != NULL) {
      bufptr = buffer;
      for (i = 0; i < segsize + 1; i++) {
         buffer[i] = '\0';
      }
      while ((copied < segsize) && (localcontent != NULL)) {
         if ((copied + localcontent->segmentsize) > segsize) {
            leftover = segsize - copied;
            memcpy(bufptr, srcptr, leftover);
            copied = copied + leftover;
            bufptr = &buffer[copied];
            if (segsize > READSZ) {
               localcontent->segmentsize = leftover;
               srcptr = srcptr + (localcontent->segmentsize - leftover);
            } else {
               localcontent->segmentsize = localcontent->segmentsize - leftover;
               srcptr = srcptr + leftover;
            }
         } else {
            memcpy(bufptr, srcptr, localcontent->segmentsize);
            copied = copied + localcontent->segmentsize;
            bufptr = &buffer[copied];
            localcontent = localcontent->next;
            if (localcontent != NULL)
               srcptr = localcontent->content;
         }
      }

      EXEC SQL WHENEVER SQLERROR DO mysql_error();
      EXEC SQL INSERT INTO mailcontent
         (mailid, sequence, content)
         VALUES (:mailid, :sequence, :buffer);

      if (errorval == 1) {
         runaway("Error submitting mail to db, exiting");
      }
      sequence++;
      copied = 0;
   }

   free(buffer);
   return;
}

//////////////////////////////////////////////////////////
//
//   Stash a copy of the email file in the lomailcontent
//   table.
//
void insertlargeobject(char *argfile, int mailthng, int filesize, int fd)
{
EXEC SQL BEGIN DECLARE SECTION;
int  mailid, amt;
char *thefile, *directory, *filenm, *server;
EXEC SQL END DECLARE SECTION;
char *forfile, *fordir, *filename;
char buffer[READSZ];
OCIBlobLocator *myblob;
int count, rcnt, rmdr;

   mailid = mailthng;
   errorval = 0;

   server = (char *)malloc(16);

   strcpy(server, "192.168.0.30");

   ///////////////////////////////////////////////
   //
   //   Get the directory and file name of the email
   //   file so it can be saved along with the file itself.
   //
   forfile = (char *)malloc(strlen(argfile) + 1);
   fordir = (char *)malloc(strlen(argfile) + 1);
   strcpy(forfile, argfile);
   strcpy(fordir, argfile);

   directory = dirname(fordir);
   if (strcmp(".", directory) == 0) {
      free(fordir);
      directory = getcwd((char *)malloc(256), 256);
      fordir = directory;
      filename = (char *)malloc(strlen(directory) + strlen(argfile) + 2);
      strcpy(filename, directory);
      strcat(filename, "/");
      strcat(filename, argfile);
   } else {
      filename = (char *)malloc(strlen(argfile) + 1);
      strcpy(filename, argfile);
   }

   ///////////////////////////////////////////////
   //
   //   Determine how many reads/stores it will take to save
   //   the email file as a LOB.
   //
   thefile = filename;
   filenm = basename(forfile);
   count = 0;
   rcnt = filesize / READSZ;
   rmdr = filesize % READSZ;
   if (rmdr == 0)
      rcnt--;

   ///////////////////////////////////////////////
   //
   //   Save the file as LOB data
   //
   EXEC SQL WHENEVER SQLERROR DO mysql_error();
   EXEC SQL VAR buffer IS RAW(READSZ);
   EXEC SQL ALLOCATE :myblob;

   EXEC SQL INSERT INTO lomailcontent
      (mailid, fullfile, filedir, filename, server)
      VALUES(:mailid, empty_blob(), :directory, :filenm, :server);

   EXEC SQL SELECT fullfile INTO :myblob
      FROM lomailcontent
      WHERE mailid = :mailid FOR UPDATE;

   lseek(fd, 0, SEEK_SET);
   amt = read(fd, buffer, READSZ);

   if (READSZ >= filesize) {
      EXEC SQL LOB WRITE ONE :filesize 
         FROM :buffer INTO :myblob;
   } else {
      while (amt == READSZ) {
         if (count == 0) {
            EXEC SQL LOB WRITE FIRST :filesize 
               FROM :buffer INTO :myblob;
         } else {
            if (count < rcnt) {
               EXEC SQL LOB WRITE NEXT :filesize 
                  FROM :buffer INTO :myblob;
            } else {
               if (rmdr == 0) {
                  EXEC SQL LOB WRITE LAST :filesize 
                     FROM :buffer INTO :myblob;
               }
            }
         }
         if (errorval == 1) {
            runaway("Error submitting mail to large object, exiting");
         }
         count++;
         amt = read(fd, buffer, READSZ);
      }
      if (amt > 0) {
         EXEC SQL LOB WRITE LAST :filesize 
            FROM :buffer INTO :myblob;
      }
   }

   if (errorval == 1) {
      runaway("Error submitting mail to large object, exiting");
   }

   free(server);
   free(forfile);
   free(fordir);
   free(filename);

   return;
}

//////////////////////////////////////////////////////
//
//   Create the database version of the mail.  Put the
//   recipients of the mail in email_receivers.  Put the 
//   actual mail content into mailcontent table.  A copy of
//   the entire file is stashed in the lomailcontent table.
//
void insertcontentandreceivers(int segsize, char *argfile,
                               int filesize, int fd)
{
struct userdata *localuser;
EXEC SQL BEGIN DECLARE SECTION;
int userid, mailid;
char usertype[9];
EXEC SQL END DECLARE SECTION;
char *forfile, *fordir, *filename;

   localuser = userhead;

   mailid = fromblock->mailid;

   //////////////////////////////////////////
   //
   //   Stash the email recipients.
   //
   while (localuser != NULL) {
      userid = localuser->userid;
      if (localuser->type == CC)
         strcpy(usertype, "CC");
      else
         strcpy(usertype, "TO");

      EXEC SQL INSERT INTO email_receiver
         (userid, mailid, usertype)
         VALUES (:userid, :mailid, :usertype);

      localuser = localuser->next;
   }

   //////////////////////////////////////////
   //
   //   Stash the email content.
   //
   submitsegment(segsize, mailid);

   //////////////////////////////////////////
   //
   //   Stash the email original file(entire)
   //
   insertlargeobject(argfile, mailid, filesize, fd);

   EXEC SQL COMMIT;

   return;
}

