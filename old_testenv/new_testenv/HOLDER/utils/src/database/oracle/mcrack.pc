void mysql_error()
{

   printf("SQL error occurred...\n");
   printf("%.*s\n", (int)sqlca.sqlerrm.sqlerrml,
         (CONST char *)sqlca.sqlerrm.sqlerrmc);
   errorval = 1;

   return;
}

void nullreturn()
{

   errorval = 1;

   return;
}

void notfoundfunc()
{
   notfound = 1;

   return;
}
