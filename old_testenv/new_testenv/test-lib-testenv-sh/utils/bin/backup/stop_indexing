#!/bin/bash
#
#   Pyed
#
   
###############################################################

   SHOST="$VIVHOST"
   VUSER="$VIVUSER"
   VPW="$VIVPW"
   VCOLLECTION=""
   VWWWUSER=""
   TARGETOS="$VIVTARGETOS"
   force=0

   ADMINCMD="admin"
   if [ "$TARGETOS" == "windows" ]; then
      ADMINCMD="admin.exe"
   fi

   FORCECMD="gronk"
   if [ "$TARGETOS" == "windows" ]; then
      FORCECMD="gronk.exe"
   fi
   
   VCMD="cgi-string"
   VACTION="stop-index"
   export PATH=$PATH:$TEST_ROOT/utils/bin:$TEST_ROOT/bin

###############################################################
   
getsetopts()
{
   while getopts "H:C:U:P:f" flag; do
     case "$flag" in
        C) VCOLLECTION=$OPTARG;;
        U) VUSER=$OPTARG;;
        P) VPW=$OPTARG;;
        H) SHOST=$OPTARG;;
        f) force=1;;
        *) echo "Usage: check_crawl -C <collection> -U <user> -P <password>"
           exit 1;;
     esac
   done
   
   if [ "$VCOLLECTION" == "" ]; then
      echo "Collection name must be specified"
      echo "Use the -C <collection> option"
      exit 1
   fi
   
   if [ "$VUSER" == "" ]; then
      VUSER=$VIVUSER
      if [ "$VUSER" == "" ]; then
         echo "Vivisimo username is needed"
         echo "Either set VIVUSER environment variable or"
         echo "use the -U <vivuser> options"
         exit 1
      fi
   fi
   
   if [ "$VPW" == "" ]; then
      VPW=$VIVPW
      if [ "$VPW" == "" ]; then
         echo "Vivisimo password is needed"
         echo "Either set VIVPW environment variable or"
         echo "use the -P <vivpassword> options"
         exit 1
      fi
   fi
   
   if [ "$SHOST" == "" ]; then
      SHOST=$VIVHOST
   fi

   if [ "$SHOST" == "" ]; then
      if [ "$VWWWUSER" == "" ]; then
         VWWWUSER=$WWWUSER
         if [ "$VWWWUSER" == "" ]; then
            echo "apache/httpd user is needed"
            echo "Set WWWUSER environment variable"
            exit 1
         fi
      fi
   fi
}

useadmincmd()
{
   
   VINSTALL=$VIVISIMO_INSTALL_DIR
   if [ "$VINSTALL" == "" ]; then
      VINSTALL="/usr/local/vivisimo-"
   fi
   
   rstring="sudo -u $VWWWUSER bin/admin-cmd --login $VUSER:$VPW $VCMD 'id=se.overview&project=query-meta&collection=$VCOLLECTION&action=$VACTION'"
   
   if [ "$VERSION_FORCE" != "" ]; then
      cd $VINSTALL$VERSION_FORCE
   else
      cd $VINSTALL
   fi
}

useforce()
{
   rstring="wget 'http://$SHOST/vivisimo/cgi-bin/$FORCECMD?collection=$VCOLLECTION&action=$VACTION&username=$VUSER&password=$VPW' -o $VCOLLECTION.stpilog -O $VCOLLECTION.stpiout"
}

usewget()
{
   rstring="wget 'http://$SHOST/vivisimo/cgi-bin/$ADMINCMD?id=se.overview&collection=$VCOLLECTION&action=$VACTION&force=1&username=$VUSER&password=$VPW' -o $VCOLLECTION.stpilog -O $VCOLLECTION.stpiout"
}

getsetopts $*

if [ "$SHOST" == "" ]; then
   useadmincmd
else
   if [ $force -eq 1 ]; then
      useforce
   else
      usewget
   fi
fi
   
eval $rstring 2>/dev/null
   
exit 0
